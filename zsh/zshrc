# Functions

magerun() {
    test -f vendor/bin/n98-magerun && vendor/bin/n98-magerun $@ || /usr/local/bin/n98-magerun.phar $@
}

dep() {
    test -f vendor/bin/dep && vendor/bin/dep $@ || /usr/local/bin/dep6 $@
}

